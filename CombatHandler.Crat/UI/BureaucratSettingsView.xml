			<RadioButton label="None" value="0"/>
			<RadioButton label="Nano Drain" value="1"/>
			<RadioButton label="Critical Chance" value="2"/>
			<RadioButton label="Nano Resistance" value="3"/>
		</OptionRadioButtonGroup>
		<BitmapView bitmap_id="GFX_GUI_FRIENDLIST_SPLITTER" layout_borders="Rect(5,5,5,5)"/>
    
		<TextView value="Pets" layout_borders="Rect(5,5,5,5)"/>
		<OptionCheckBox label="Spawn pets" opt_category="AOSharp" opt_type="variant" opt_variable="CombatHandler__SpawnPets" layout_borders="Rect(10,1,5,1)"/>
		<OptionCheckBox label="Buff pets" opt_category="AOSharp" opt_type="variant" opt_variable="CombatHandler__BuffPets" layout_borders="Rect(10,1,5,1)"/>
		<BitmapView bitmap_id="GFX_GUI_FRIENDLIST_SPLITTER" layout_borders="Rect(5,5,5,5)"/>

