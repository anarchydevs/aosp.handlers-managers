    <OptionCheckBox label="Use Taunt Trimmer" opt_category="AOSharp" opt_type="variant" opt_variable="CombatHandler__TauntTrimmer" layout_borders="Rect(10,1,5,1)"/>
    <OptionCheckBox label="Use Aggressive-Defensive Trimmer" opt_category="AOSharp" opt_type="variant" opt_variable="CombatHandler__PetAggDefTrimmer" layout_borders="Rect(10,1,5,1)"/>
    <BitmapView bitmap_id="GFX_GUI_FRIENDLIST_SPLITTER" layout_borders="Rect(5,5,5,5)"/>

		<TextView value="Helpers" layout_borders="Rect(5,5,5,5)"/>
		<OptionCheckBox label="(POH/DB3) Root Colonels Hands/Fireballs" opt_category="AOSharp" opt_type="variant" opt_variable="CombatHandler__UseAoeRoot" layout_borders="Rect(10,1,5,1)"/>
		<BitmapView bitmap_id="GFX_GUI_FRIENDLIST_SPLITTER" layout_borders="Rect(5,5,5,5)"/>
