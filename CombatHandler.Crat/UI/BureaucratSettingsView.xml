			<RadioButton label="AAD/AAO" value="0"/>
			<RadioButton label="Critical Chance" value="1"/>
			<RadioButton label="Nano Resistance" value="2"/>
		</OptionRadioButtonGroup>
		<BitmapView bitmap_id="GFX_GUI_FRIENDLIST_SPLITTER" layout_borders="Rect(5,5,5,5)"/>

		<TextView value="Debuffs" layout_borders="Rect(5,5,5,5)"/>
